<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_height="wrap_content">
	<ImageView android:gravity="center" android:src="@drawable/courier_dhl"
		android:id="@+id/imageViewOptionsMenu1" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center_vertical|center_horizontal"
		android:paddingLeft="5dp"></ImageView>
	<TextView android:id="@+id/textViewOptionsMenu1"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:gravity="center_vertical" android:paddingLeft="2dip"
		android:minHeight="?android:attr/listPreferredItemHeight" />
</LinearLayout>

